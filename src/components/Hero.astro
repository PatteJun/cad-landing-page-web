---
import { content } from '../store/language';
const initialContent = content.get();
---

<section class="bg-white" id="hero-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold text-text-primary mb-6 leading-tight" id="hero-title">
          {initialContent.hero.title}
        </h1>
        <p class="text-xl text-text-secondary mb-12 max-w-3xl mx-auto" id="hero-subtitle">
          {initialContent.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a href="#" class="bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-red-700 transition-colors inline-flex items-center justify-center" id="hero-primary-button">
            {initialContent.hero.primaryButton}
          </a>
          <a href="#" class="bg-white text-primary border-2 border-primary px-6 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors inline-flex items-center justify-center" id="hero-secondary-button">
            {initialContent.hero.secondaryButton}
          </a>
        </div>
        <div class="flex justify-center">
          <a href="#" target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-primary flex items-center gap-2 font-medium" id="hero-app-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            {initialContent.hero.appButton}
          </a>
        </div>
      </div>
    </div>
</section>

<script>
  import { content } from '../store/language';

  // Update hero content when language changes
  content.subscribe(newContent => {
    document.getElementById('hero-title')!.textContent = newContent.hero.title;
    document.getElementById('hero-subtitle')!.textContent = newContent.hero.subtitle;
    document.getElementById('hero-primary-button')!.textContent = newContent.hero.primaryButton;
    document.getElementById('hero-secondary-button')!.textContent = newContent.hero.secondaryButton;
    document.getElementById('hero-app-button')!.textContent = newContent.hero.appButton;
  });
</script>