---
import { content } from '../store/language';
const initialContent = content.get();
---

<section class="bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
      <div class="text-center">
        <h2 class="text-4xl font-bold tracking-tight text-text-primary sm:text-5xl" id="cta-title">
          {initialContent.callToAction.title}
        </h2>
        <p class="mx-auto mt-6 max-w-xl text-lg text-text-secondary" id="cta-subtitle">
          {initialContent.callToAction.subtitle}
        </p>
        <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
          <a href="https://app.direct.carauktion.ch/" target="_blank" rel="noopener noreferrer" class="bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-red-700 transition-colors inline-flex items-center justify-center" id="cta-primary-button">
            {initialContent.callToAction.primaryButton}
          </a>
          <a href="https://b2b.autoscout24.ch/direct/" target="_blank" rel="noopener noreferrer" class="bg-white text-primary border-2 border-primary px-6 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors inline-flex items-center justify-center" id="cta-secondary-button">
            {initialContent.callToAction.secondaryButton}
          </a>
        </div>
        <div class="mt-6">
          <a href="https://app.carauktion-direct.ch/" target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-primary inline-flex items-center gap-2 font-medium" id="cta-app-button">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            {initialContent.callToAction.appButton}
          </a>
        </div>
      </div>
    </div>
</section>

<script>
  import { content } from '../store/language';

  content.subscribe(newContent => {
    document.getElementById('cta-title')!.textContent = newContent.callToAction.title;
    document.getElementById('cta-subtitle')!.textContent = newContent.callToAction.subtitle;
    document.getElementById('cta-primary-button')!.textContent = newContent.callToAction.primaryButton;
    document.getElementById('cta-secondary-button')!.textContent = newContent.callToAction.secondaryButton;
    document.getElementById('cta-app-button')!.textContent = newContent.callToAction.appButton;
  });
</script>