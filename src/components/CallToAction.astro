---
import { content } from '../content/de';
const { callToAction } = content;
---

<section class="bg-gray-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
      <div class="text-center">
        <h2 class="text-4xl font-bold tracking-tight text-text-primary sm:text-5xl">
          {callToAction.title}
        </h2>
        <p class="mx-auto mt-6 max-w-xl text-lg text-text-secondary">
          {callToAction.subtitle}
        </p>
        <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
          <a href="#" class="bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-red-700 transition-colors inline-flex items-center justify-center">
            {callToAction.primaryButton}
          </a>
          <a href="#" class="bg-white text-primary border-2 border-primary px-6 py-3 rounded-md font-semibold hover:bg-gray-50 transition-colors inline-flex items-center justify-center">
            {callToAction.secondaryButton}
          </a>
        </div>
        <div class="mt-6">
          <a href="#" target="_blank" rel="noopener noreferrer" class="text-text-secondary hover:text-primary inline-flex items-center gap-2 font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            {callToAction.appButton}
          </a>
        </div>
      </div>
    </div>
  </section>