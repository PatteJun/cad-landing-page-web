---
import { content } from '../content/de';
const { footer } = content;
---

<footer class="bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-xl font-semibold text-text-primary mb-4">CARAUKTION</h3>
        <p class="text-text-secondary">{footer.description}</p>
      </div>
      <div>
        <h4 class="font-semibold text-text-primary mb-4">{footer.quickLinks.title}</h4>
        <ul class="space-y-2">
          {footer.quickLinks.links.map((link) => (
            <li><a href={link.href} class="text-text-secondary hover:text-primary">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text-text-primary mb-4">{footer.support.title}</h4>
        <ul class="space-y-2">
          {footer.support.links.map((link) => (
            <li><a href={link.href} class="text-text-secondary hover:text-primary">{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text-text-primary mb-4">{footer.mobileApp.title}</h4>
        <div>
          <a href="#" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-text-secondary hover:text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            {footer.mobileApp.downloadText}
          </a>
        </div>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-center text-text-secondary">{footer.copyright}</p>
    </div>
  </div>
</footer>