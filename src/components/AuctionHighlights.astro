---

<section class="bg-white py-12 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
        Recent Auction Highlights
      </h2>
      <p class="mt-4 text-lg text-text-secondary">
        Discover the exceptional deals our dealers are securing
      </p>
    </div>
  </div>

  <div class="relative">
    <div class="auction-ticker">
      <div class="ticker-track">
        {allAuctions.map((auction) => (
          <div class="ticker-item">
            <div class="bg-white rounded-xl shadow-md overflow-hidden flex w-[480px] hover:shadow-lg transition-shadow duration-300">
              <div class="w-[240px] flex-shrink-0 relative">
                <div class="aspect-[16/9] h-full">
                  <img 
                    src={auction.image} 
                    alt={auction.title} 
                    class="absolute inset-0 w-full h-full object-cover"
                  />
                </div>
              </div>
              <div class="flex-1 p-4">
                <h3 class="font-semibold text-text-primary mb-2 truncate">
                  {auction.title}
                </h3>
                <div class="space-y-1">
                  <p class="text-primary font-bold">
                    {auction.bid}
                  </p>
                  <p class="text-sm text-text-secondary flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    {auction.mileage}
                  </p>
                  <p class="text-sm text-text-secondary flex items-center gap-1">
                    <Fragment set:html={conditions[auction.condition].icon} />
                    {conditions[auction.condition].label}
                  </p>
                  <p class="text-sm text-text-secondary flex items-center gap-1">
                    <Fragment set:html={equipmentLevels[auction.equipment].icon} />
                    {equipmentLevels[auction.equipment].label}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white to-transparent pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent pointer-events-none"></div>
  </div>
</section>

<style>
  .auction-ticker {
    width: 100%;
    overflow: hidden;
    padding: 1rem 0;
  }

  .ticker-track {
    display: flex;
    gap: 2rem;
    animation: ticker 30s linear infinite;
    will-change: transform;
  }

  .ticker-item {
    flex: 0 0 auto;
  }

  @keyframes ticker {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>