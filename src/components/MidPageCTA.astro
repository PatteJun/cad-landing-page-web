---
import { content } from '../content/de';
const { midPageCTA } = content;
---

<section class="bg-gray-50 py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
          {midPageCTA.title}
        </h2>
        <p class="mx-auto mt-6 max-w-xl text-lg text-text-secondary">
          {midPageCTA.subtitle}
        </p>
        <div class="mt-8 flex justify-center gap-4">
          <a href="#" class="bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-red-700 transition-colors inline-flex items-center justify-center">
            {midPageCTA.button}
          </a>
        </div>
      </div>
    </div>
  </section>