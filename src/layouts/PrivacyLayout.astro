---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CARAUKTION Direct Privacy Policy" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - CARAUKTION Direct</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --primary: #d81825;
    --primary-dark: #b71420;
    --primary-light: #ef1f2d;
    --secondary: #1f2937;
    --secondary-dark: #111827;
    --secondary-light: #374151;
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
    --border: #e5e7eb;
  }
  
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    padding: 0;
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }
  
  .prose {
    color: var(--text-primary);
    line-height: 1.75;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
  }
  
  .prose strong {
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .prose ul {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1.25rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
</style>